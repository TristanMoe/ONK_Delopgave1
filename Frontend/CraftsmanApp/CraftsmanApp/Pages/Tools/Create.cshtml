                <label asp-for="Tool.Purchased" class="control-label"></label>
                <input asp-for="Tool.Purchased" class="form-control" />
                <span asp-validation-for="Tool.Purchased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.Brand" class="control-label"></label>
                <input asp-for="Tool.Brand" class="form-control" />
                <span asp-validation-for="Tool.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.Color" class="control-label"></label>
